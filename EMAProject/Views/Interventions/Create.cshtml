@model EMAProject.Models.Intervention

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

@{
    List<SelectListItem> allClients = (List<SelectListItem>)ViewData["InterventionAllClients"];
    Client currClient = (Client)TempData["Client"];
    <h5>New Intervention for @currClient.FirstName @currClient.Lastname</h5>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdditionalClientID" class="control-label"></label>
                <select asp-for="AdditionalClientID" asp-items="@allClients" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="PreInterventionScore" class="control-label"></label>
                <input asp-for="PreInterventionScore" type="number" class="form-control" />
                <span asp-validation-for="PreInterventionScore" class="text-danger"></span>
            </div>
            <hr />
            <small class="text-muted">Please ensure that any list of details are delimited by a comma.</small>
            <div class="form-group mt-2">
                <label asp-for="Antecedence" class="control-label"></label>
                <input asp-for="Antecedence" class="form-control" />
                <span asp-validation-for="Antecedence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Behaviours" class="control-label"></label>
                <input asp-for="Behaviours" class="form-control" />
                <span asp-validation-for="Behaviours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consequence" class="control-label"></label>
                <input asp-for="Consequence" class="form-control" />
                <span asp-validation-for="Consequence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
